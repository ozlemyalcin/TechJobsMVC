<div class="container body-content">

    <h1>@ViewBag.title</h1>

    @{
        //TODO #1: Use a loop to display job results in a table.
    }

    @if (ViewBag.Jobs != null)
    {
        @foreach (Job job in ViewBag.Jobs)
        {
        <table class="job-listing">
    <tr>

        <th>
            Id
        </th>
        <td>@job.Id</td>
    </tr>
    <tr>

        <th>
            Name
        </th>
        <td>@job.Name</td>
    </tr>
    <tr>
        <th>
            Employer
        </th>
        <td>@job.Employer</td>
    </tr>
    <tr>
        <th>
            Location
        </th>
        <td>@job.Location</td>
    </tr>
    <tr>
        <th>
            Position
        </th>
        <td>@job.PositionType</td>
    </tr>

    <tr>
        <th>
            Skill
        </th>
        <td>@job.CoreCompetency</td>
    </tr><br>
</table>
        }
    }

</div>